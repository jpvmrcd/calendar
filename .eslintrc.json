{
  "env": {
    "browser": true,
    "jest/globals": true
  },
  "extends": [
    "airbnb-base",
    "plugin:import/typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": [
    "@typescript-eslint",
    "jest"
  ],
  "rules": {
    "no-plusplus": [
      2,
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": 2,
    "import/extensions": [
      2,
      {
        "ts": "never",
        "js": "never"
      }
    ],
    "no-param-reassign": [
      2,
      {
        "props": false
      }
    ]
  }
}
